<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Experience</title>
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>

    <div id="wrapper" class="box-border m-0 p-0 bg-yellow-400">

        <div id="header" class="w-full h-14 flex justify-between bg-blue-900">
            <div id="logo" class="w-1/4 h-full flex justify-center items-center">
                <a href="/dashboard"> <p class="text-blue-900 bg-white p-1 rounded-lg text-3xl font-bold">Biogs</p> </a>
            </div>

            <div id="menu-wrapper" class="w-48 h-full flex justify-center items-center">
                <div id="littleProfile" class="w-12 h-12 rounded-full bg-white border"> 

                </div>
            </div>
        </div>

        <div id="main" class="w-11/12 h-screen relative mx-auto flex justify-center items-center">

            <div id="formContainer" class="w-3/4 h-full relative flex justify-center shadow-xl bg-white">
            
                <div class="w-11/12 h-5/6 relative mx-auto mt-5">
                    <div class="w-full h-10 flex justify-center items-center">
                        <p class="text-4xl font-extralight text-center">Last 3 Professionnal experiences:</p>
                    </div>
                    <div class="w-full flex justify-center items-center absolute mt-1 ml-20">                   
                        <% if (typeof errorMessage != 'undefined') { %>               
                            
                            <% errorMessage.forEach((error) => { %>
                                <p class="text-sm font-extralight text-center"> <%= error.msg%>  </p>
                            <% }) %>
                            
                        <% } %>
                    </div>

                    <form action="/experience" method="POST">     
                        
                        <div id="experience" class="w-full h-full mt-3 relative  grid grid-rows-3">
                            
                            <div class="flex justify-between grid grid-cols-3 border-b-2 border-gray-200">
                                <div class="">
                                    <label for="job1position" class="text-base text-gray-600 ">First last job's Position</label> 
                                    <input type="text" name="job1position" required class="w-11/12 h-8 mt-4 text-center border border-gray-400 rounded-lg focus:outline-none">
                                </div>
    
                                <div class="">
                                    <label for="company1" class="text-base text-gray-600">Company</label> 
                                    <input type="text" name="company1" required class="w-11/12 h-8 mt-4 border text-center border-gray-400 rounded-lg focus:outline-none">
                                </div>
    
                                <div class="flex justify-around items-center mt-9">
                                    <label for="job1duration"  class="text-base text-gray-600 ml-5">Duration:</label> 
                                    <input type="number" name="job1duration" min="1" max="100" required class="w-14 h-8 text-gray-500  text-center border border-gray-400 rounded-lg focus:outline-none"> 
                                    <%-include("partials/yearsMonths")%>                              
                                </div> 
     
                                <div class=" mt-5">
                                    <p class="text-gray-600">First last Job's description</p>
                                    <div>
                                        <textarea name="job1description" required class="w-96 border border-gray-400  focus:outline-none"> </textarea>
                                    </div>
                                </div>
                            </div>

                            
                            <div class="flex justify-between grid grid-cols-3 border-b-2 border-gray-200">
                                <div class="mt-3">
                                    <label for="job2position" class="text-base text-gray-600 ">Second last job's Position</label> 
                                    <input type="text" name="job2position" required class="w-11/12 h-8 mt-3 text-center border border-gray-400 rounded-lg focus:outline-none">
                                </div>
    
                                <div class="mt-3">
                                    <label for="company2" class="text-base text-gray-600">Company</label> 
                                    <input type="text" name="company2" required class="w-11/12 h-8 mt-3 text-center border border-gray-400 rounded-lg focus:outline-none">
                                </div>
    
                                <div class="flex justify-around items-center mt-9">
                                    <label for="job2duration"  class="text-base text-gray-600 ml-5">Duration:</label> 
                                    <input type="number" name="job2duration" min="1" max="100" required class="w-14 h-8 text-gray-500  text-center border border-gray-400 rounded-lg focus:outline-none"> 
                                    <%-include("partials/yearsMonths")%> 
                                </div>

                                <div class=" mt-3">
                                    <p class="text-gray-600"> Second last job's description</p>
                                    <div>
                                        <textarea name="job2description" required  class="w-96 border border-gray-400 focus:outline-none"></textarea>
                                    </div>
                                </div>
                            </div>

                            <div class="flex justify-between grid grid-cols-3 border-b-2 border-gray-200">
                                <div class="mt-3">
                                    <label for="job3position" class="text-base text-gray-600">Third last job's Position</label> 
                                    <input type="text" name="job3position" required class="w-11/12 h-8 mt-3 text-center border border-gray-400 rounded-lg focus:outline-none">
                                </div>
    
                                <div class="mt-3">
                                    <label for="company3" class="text-base text-gray-600">Company</label> 
                                    <input type="text" name="company3" required class="w-11/12 h-8 mt-3 text-center border border-gray-400 rounded-lg focus:outline-none">
                                </div>
    
                                <div class="flex justify-around items-center mt-9">
                                    <label for="job3duration" class="text-base text-gray-600 ml-5">Duration:</label> 
                                    <input type="number" name="job3duration" min="1" max="100" required class="w-14 h-8 text-gray-500  text-center border border-gray-400 rounded-lg focus:outline-none"> 
                                    <%-include("partials/yearsMonths")%> 
                                </div>

                                <div class="mt-3">
                                    <p class="text-gray-600">Third last Job's description</p>
                                    <div>
                                        <textarea name="job3description" required class="w-96 border border-gray-400 focus:outline-none"></textarea>
                                    </div>
                                </div>
                            </div>

 
                        </div>
                        
                        <div class="mt-5">                           
                            <input type="submit" value="Save"  class="w-9/12 h-8  ml-28 bg-gray-600 rounded-2xl text-white hover:bg-blue-900">
                        </div>
                
                    </form>
                </div>

            </div>

        </div>
    </div>

</body>

<script src="show-hide.js"> </script>

</html>