<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Biography 1</title>
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>

    <div id="wrapper" class="box-border m-0 p-0 bg-yellow-400">

        <div id="header" class="w-full h-14 flex justify-between bg-blue-900">
            <div id="logo" class="w-1/4 h-full flex justify-center items-center">
                <a href="/dashboard"> <p class="text-blue-900 bg-white p-1 rounded-lg text-3xl font-bold">Biogs</p> </a>
            </div>

            <div id="menu-wrapper" class="w-48 h-full flex justify-center items-center">
                <div id="littleProfile" class="w-12 h-12 rounded-full bg-white border"> 

                </div>
            </div>

        </div> 

        <div id="main" class="w-11/12 h-screen relative mx-auto flex justify-center items-center">

            <div id="formContainer" class="w-3/5 h-full relative flex justify-center bg-white hover:shadow-2xl">

                <div class="w-full flex justify-center items-center absolute mt-24">                   
                    <% if (typeof errorMessage != 'undefined') { %>               
                        
                        <% errorMessage.forEach((error) => { %>
                            <p class="text-sm font-extralight text-center"> <%= error.message%> </p>
                        <% }) %>
                        
                    <% } %>
                </div>
            
                <div class="w-10/12 h-5/6 relative mx-auto mt-5">
                    <div class="w-full h-16 flex justify-center items-center">
                        <p class="text-4xl font-extralight text-center">Build your Profile and discover new opportunities</p>
                    </div>

                    <form action="/profile" method="POST" enctype="multipart/form-data">
                        
                        <div class="w-full mt-4 relative">
                            <label for="fullname" class="text-base text-gray-500 ml-5">Fullname</label>
                            <input id="username"  name="fullname"  required class="w-11/12 h-9 mt-2 ml-5 border border-gray-400 rounded-lg focus:outline-none">
                        </div>

                        
                        <div class="w-full mt-4 relative">
                            <label for="profile" class="text-base text-gray-500 ml-5">Profile Picture</label>
                            <input type="file" name="profilepic" required class="w-11/12 h-9 mt-2 ml-5 focus:outline-none">
                        </div>
                         
                        <div class="mt-4">
                            <label for="currentjob" class="text-base text-gray-500 ml-5">Current Job</label>
                            <input type="text" name="currentjob" required class="w-11/12 h-9 mt-2 ml-5 border border-gray-400 rounded-lg focus:outline-none">
                        </div>

                        <div class="mt-4">
                           <label for="industry" class="text-base text-gray-500 ml-5">Industrial Field</label>
                            <%-include("partials/industry")%>
                        </div>

                        <div class="mt-4">
                            <label for="country" class="text-base text-gray-500 ml-5">Country</label>
                            <%-include("partials/country")%>
                        </div>

                        <div class="mt-4"> 
                            <label for="city" class="text-base text-gray-500 ml-5">City</label>
                            <input type="text" name="city" required class="w-11/12 h-9 mt-2 ml-5 border border-gray-400 rounded-lg focus:outline-none">
                        </div>
                        

                        <div class="mt-1">                           
                            <input type="submit" value="Next"  class="w-9/12 h-9 mt-3 ml-14 bg-gray-600 rounded-2xl text-white hover:bg-blue-900 focus:outline-none">
                        </div>
                
                    </form>
                </div>

            </div>

        </div>
    </div>

</body>

<script src="show-hide.js"> </script>

</html>