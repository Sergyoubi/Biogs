<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Biography</title>
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
    
    <div id="wrapper" class="box-border m-0 p-0">

        <div id="header" class="w-full h-14 flex justify-between bg-blue-900">
            <div id="logo" class="w-1/4 h-full flex justify-center items-center ml-2">
                <a href="/dashboard/<%= userId %>"> <p class="text-blue-900 bg-white p-1 rounded-lg text-3xl font-bold">Biogs</p> </a>
            </div>

            <div id="menu-wrapper" class="w-48 h-full flex justify-center items-center">
                <div id="littleProfile" class="w-12 h-12 rounded-full bg-blue-900 border border-blue-900 cursor-pointer">
                    <img class="w-full h-full" src="/profiles/<%= model.profilepic %>">
                </div>
            </div>
 
            <div id="profileMenu" class="w-60 h-60 shadow-lg absolute cursor-pointer left-3/4 mt-14 ml-7 hidden z-10">
                <div class="h-3/5 row-span-2 flex justify-around items-center relative bg-white bg-opacity-90">
                    <div id="profilePic" class="w-24 h-24 rounded-full border border-white bg-white cursor-pointer">
                        <img class="w-full h-full" src="/profiles/<%= model.profilepic %>">
                    </div>

                    <div id="userNamme">
                        <p class="font-semibold text-lg"> <%= model.username %> </p>
                    </div>           
                </div>

                <div id="viewProfile" class="h-1/5 flex justify-center items-center relative text-gray-700 bg-white hover:bg-gray-100">
                    <a href="/dashboard/<%= userId %>"> <p class="font-thin text-lg">Back to Dashboard </p> </a>
                </div>

                <div id="logOut" class="h-1/5 flex justify-center items-center relative text-gray-700 bg-white hover:bg-gray-100">
                    <a href="/"> <p class="font-thin text-lg">Log Out</p> </a>
                </div>
            </div>

        </div>

        <div id="main" class="w-11/12 h-screen relative mx-auto grid grid-cols-5 gap-2">
            <div id="profileWrapper">
                
                <div class="w-11/12 h-80 relative mx-auto bg-white mt-5 grid grid-rows-7 shadow-xl">

                    <div id="profilePic" class="row-span-3 flex justify-center items-center">
                        <div class="w-32 h-32 rounded-full bg-white">
                            <a href="/edit/profile/picture/<%= userId%>"> <img class="w-full h-full" src="/profiles/<%= model.profilepic %>"> </a>
                        </div>                      
                    </div>

                    <div id="edit" class="w-10/12 mx-auto flex justify-center">
                        <a href="/edit/profile/<%= userId %>">  <p class="text-base font-semibold text-red-700 hover:text-blue-900">Edit Bio</p> </a>
                     </div>

                    <div id="fullname" class="flex justify-center items-center">
                        <p class="text-lg font-semibold text-gray-600"> <%= model.username %> </p>
                    </div>  
                    
                    <div id="countryAndCity" class="flex justify-center items-center">
                        <p class="text-sm font-normal text-gray-600"> <%= model.usercity%>, <%= model.usercountry%> </p>
                    </div> 

                    <div id="messageIcon" class="flex justify-center items-center">
                        <a href=""> <img src="/images/email.svg" class="w-6 h-6 mx-8"> </a>
                    </div>
                </div>

            </div>


            <div id="centerSection" class="col-span-3 h-screen">
                <div id="current_job" class="w-11/12 h-14 flex justify-start items-center relative mx-auto mt-1">
                    <div class="flex justify-start items-center">
                        <img src="/images/job.svg" class="w-6 h-6 mx-8">
                        <p class="text-2xl font-extralight"> Current Job :</p>
                    </div>
                    <div class="relative ml-16">                                                
                        <p class="text-base font-extralight text-gray-700"> <%= model.userjob%> </p>
                    </div>
                </div>

                <div id="industrial field" class="w-11/12 h-14 flex justify-start items-center relative mx-auto mt-6">
                    <div class="flex justify-start items-center">
                        <img src="/images/industry.svg" class="w-6 h-6 mx-8">
                        <p class="text-2xl font-extralight">Industrial field :</p>
                    </div>
                    <div class="relative ml-12">                                                
                        <p class="text-base text-white font-extralight text-gray-700"> <%= model.userindustry%> </p>
                    </div>
                </div>

                

                <div id="experienceWrapper" class="w-full mt-3">
                    <div class="w-11/12 h-14 flex justify-start items-center relative ml-8 bg-yellow-400">
                        <img src="/images/suitcase.svg" class="w-6 h-6 mx-8">
                        <p class="text-2xl font-extralight text-white">Last 3 Professional experiences</p>
                    </div>

                    <div id="listWrapper" class="w-11/12 relative ml-12 mt-7"> 

                        <div id="job1" class="border-b-2 border-gray-100 mx-5 my-5"> 
                            <div id="jobPosition" class="w-2/5 flex justify-between bg-blue-50">
                                <p class="font-bold text-lg text-gray-700"> <%= model.firstjobposition %> </p>  
                                <p class="font-extralight">( <%= model.firstjobduration %> <%= model.firstjobdurationtype %> )</p>                       
                            </div>
    
                            <div id="companyName" class="ml-4">
                                <p class="font-normal text-gray-700 text-lg"> <%= model.firstjobcompany %> </p>
                            </div>

                            <div id="jodDesc" class="ml-4 mt-3">
                                <p class="font-extralight text-gray-700"> <%= model.firstjobdescription %> </p>
                            </div>
                        </div>

                        <div id="job2" class="border-b-2 border-gray-100 mx-5 my-5"> 
                            <div id="jobPosition" class="w-2/5 flex justify-between bg-blue-50">
                                <p class="font-bold text-lg text-gray-700"> <%= model.secondjobposition %> </p>  
                                <p class="font-extralight">(<%=  model.secondjobduration%> <%= model.secondjobdurationtype %>)</p>                       
                            </div>
    
                            <div id="companyName" class="ml-4">
                                <p class="font-normal text-gray-700 text-lg"> <%= model.secondjobcompany %> </p>
                            </div>

                            <div id="jodDesc" class="ml-4 mt-3">
                                <p class="font-extralight text-gray-700"> <%= model.secondjobdescription %> </p>
                            </div>
                        </div>

                        <div id="job3" class="border-b-2 border-gray-100 mx-5 my-5"> 
                            <div id="jobPosition" class="w-2/5 flex justify-between bg-blue-50">
                                <p class="font-bold text-lg text-gray-700"> <%= model.thirdjobposition %> </p>  
                                <p class="font-extralight"> ( <%= model.thirdjobduration %> <%= model.thirdjobdurationtype %> ) </p>                       
                            </div>
    
                            <div id="companyName" class="ml-4">
                                <p class="font-normal text-gray-700 text-lg"> <%= model.thirdjobcompany %> </p>
                            </div>

                            <div id="jodDesc" class="ml-4 mt-3">
                                <p class="font-extralight text-gray-700"> <%= model.thirdjobdescription %> </p>
                            </div>
                        </div>

                    </div>
                                      
                </div>

                <div id="educWrapper" class="w-full  mt-10">

                    <div class="w-11/12 h-14 flex justify-start items-center ml-8 bg-yellow-400">
                        <img src="/images/education.svg" class="w-7 h-7 mx-8">
                        <p class="text-2xl font-extralight text-white">Education</p>
                    </div>

                    <div id="listWrapper" class="w-full"> 

                        <div class="flex justify-start items-center ml-16 mt-10 mb-12">
                            <p class="font-semibold"> Primary School: </p> 
                            <p class="ml-3 text-base font-extralight text-gray-700"> <%= model.primaryschool %> </p> 
                        </div>   

                        <div class="flex justify-start items-center ml-16 mt-10 mb-12">
                            <p class="font-semibold"> Junior High School(Middle School): </p> 
                            <p class="ml-3 text-base font-extralight text-gray-700"> <%= model.middleschool %> </p> 
                        </div>

                        <div class="flex justify-start items-center ml-16 mt-10 mb-12">
                            <p class="font-semibold"> University: </p> 
                            <p class="ml-3 text-base font-extralight text-gray-700"> <%= model.university %> , </p> 
                            <p class="ml-3 text-base font-extralight text-gray-700"> <%= model.universitydepartment %> </p> 
                        </div>  

                        <div class="flex justify-start items-center ml-16 mt-10 mb-12">
                            <p class="font-semibold"> Degree: </p> 
                            <p class="ml-3 text-base font-extralight text-gray-700"> <%= model.degree %> </p> 
                        </div>

                    </div>

                </div>           
            
                
                           
            </div>

            <div id="rightSection" class="">

            </div>
        </div>

        <!-- 
            <div id="footer" class="w-11/12 h-20 bg-blue-900 mx-auto flex justify-around items-center">
                <a href="/"><p> <span class="font-bold text-white text-lg">The Networker</span> <span class="text-sm text-white">&copy Copyright 2021</span></p></a>
                <a href="/user/agreement"><p class="text-white text-sm font-medium">User Agreement</p></a>
                <a href="/privacy/policy"><p class="text-white text-sm font-medium">Privacy Policy</p></a>
                <a href="/cookie/policy"><p class="text-white text-sm font-medium">Cookie Policy</p></a>
                <a href="/image/source"><p class="text-white text-sm font-medium">Image Source</p></a>
                <a href="/services"><p class="text-white text-sm font-medium">Services</p></a>
            </div>
         -->
        
    </div>
</body>

<script>

    const profilePic = document.getElementById("littleProfile");
    const menu = document.getElementById("profileMenu");

    profilePic.addEventListener('click', () => {
        menu.style.display = "block"
    });

    window.addEventListener('mouseup',function(e){

        if(e.target != menu && e.target.parentNode != menu){
            menu.style.display = 'none';
        }
        
    });

</script>
</html>